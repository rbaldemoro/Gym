<div class="container-fluid">
<p id="notice"><%= notice %></p>

<h1>Client Workouts</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Trainer</th>
      <th>Client</th>
      <th>Duration</th>
      <th>Dateworkout</th>
      <th>Amount</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @client_workouts.each do |client_workout| %>
      <tr>
        <td><%= client_workout.trainer %></td>
         <td><%= client_workout.client %></td>
        <td><%= client_workout.duration %></td>
        <td><%= client_workout.dateWorkout %></td>
        <td><%= client_workout.amount %></td>
        <td>
        <button class="btn btn-warning btn-block">
          <%= link_to 'Show', client_workout %>
        </button>
        </td>
        <td>
        <button class="btn btn-success btn-block">
          <%= link_to 'Edit', edit_client_workout_path(client_workout) %>
        </button>
        </td>
        <td>
        <button class="btn btn-danger btn-block">
          <%= link_to 'Destroy', client_workout, method: :delete, data: { confirm: 'Are you sure?' } %>
        </button>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<button class="btn btn-success text-white">
<%= link_to 'New Client Workout', new_client_workout_path %>
</button>
</div>